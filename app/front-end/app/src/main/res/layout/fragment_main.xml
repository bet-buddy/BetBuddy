<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        \

        <TextView
            android:id="@+id/vstext3"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="214dp"
            android:layout_toRightOf="@+id/fulham"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/magicView"
            android:layout_width="137dp"
            android:layout_height="114dp"
            android:layout_below="@+id/betTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/miamiheat2" />

        <TextView
            android:id="@+id/betTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sponsored Bet:"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/vstext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/betTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/magicView"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/bballicon"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_below="@+id/vstext1"

            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="-41dp"
            android:layout_toRightOf="@+id/magicView"
            app:srcCompat="@drawable/nba" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="124dp"
            android:layout_height="127dp"
            android:layout_below="@+id/betTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="244dp"
            android:layout_marginLeft="244dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/vstext1"
            app:srcCompat="@drawable/sixers2" />

        <ImageView
            android:id="@+id/fulham"
            android:layout_width="114dp"
            android:layout_height="112dp"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/tottenham" />

        <TextView
            android:id="@+id/vstext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/fulham"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/mancity"
            android:layout_width="115dp"
            android:layout_height="373dp"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="39dp"

            android:layout_marginTop="-85dp"
            android:layout_toRightOf="@+id/vstext2"
            app:srcCompat="@drawable/mancity" />

        <ImageView
            android:id="@+id/mstate"
            android:layout_width="125dp"
            android:layout_height="95dp"

            android:layout_below="@+id/mancity"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-70dp"
            android:layout_toRightOf="@+id/vstext3"
            app:srcCompat="@drawable/texastech" />

        <ImageView
            android:id="@+id/premierleague"
            android:layout_width="47dp"
            android:layout_height="64dp"
            android:layout_below="@+id/vstext2"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/fulham"
            app:srcCompat="@drawable/premierleague3" />

        <ImageView
            android:id="@+id/ncaab"
            android:layout_width="51dp"
            android:layout_height="70dp"
            android:layout_below="@+id/vstext3"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-4dp"
            android:layout_toRightOf="@+id/lsu"
            app:srcCompat="@drawable/ncaab" />

        <ImageView
            android:id="@+id/lsu"
            android:layout_width="113dp"
            android:layout_height="115dp"
            android:layout_below="@+id/fulham"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="53dp"
            app:srcCompat="@drawable/uva" />

        <TextView
            android:id="@+id/tailored"
            android:layout_width="332dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bballicon"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:text="Tailored Bet (Man. City):"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/premierleague"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="3dp"
            android:text="Latest Bet Result (UVA Win):"
            android:textColor="#000"
            android:textSize="26sp" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>