<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        \

        <TextView
            android:id="@+id/vstext3"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="191dp"
            android:layout_toRightOf="@+id/fulham"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/magicView"
            android:layout_width="155dp"
            android:layout_height="174dp"
            android:layout_below="@+id/betTextView"
            android:layout_marginLeft="1dp"
            app:srcCompat="@drawable/magic1" />

        <TextView
            android:id="@+id/betTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Featured Bets"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/vstext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/betTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="37dp"
            android:layout_toRightOf="@+id/magicView"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/bballicon"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_below="@+id/vstext1"

            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="-41dp"
            android:layout_toRightOf="@+id/magicView"
            app:srcCompat="@drawable/nba" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="138dp"
            android:layout_height="150dp"
            android:layout_below="@+id/betTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="235dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@+id/vstext1"
            app:srcCompat="@drawable/sixers2" />

        <ImageView
            android:id="@+id/fulham"
            android:layout_width="109dp"
            android:layout_height="132dp"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/fulham" />

        <TextView
            android:id="@+id/vstext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/fulham"
            android:text="VS."
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/mancity"
            android:layout_width="133dp"
            android:layout_height="440dp"
            android:layout_below="@+id/magicView"
            android:layout_marginLeft="27dp"

            android:layout_marginTop="-136dp"
            android:layout_toRightOf="@+id/vstext2"
            app:srcCompat="@drawable/mancity" />

        <ImageView
            android:id="@+id/mstate"
            android:layout_width="171dp"
            android:layout_height="177dp"

            android:layout_below="@+id/mancity"
            android:layout_marginLeft="-11dp"
            android:layout_marginTop="-138dp"
            android:layout_toRightOf="@+id/vstext3"
            app:srcCompat="@drawable/michiganstate" />

        <ImageView
            android:id="@+id/premierleague"
            android:layout_width="47dp"
            android:layout_height="64dp"
            android:layout_below="@+id/vstext2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/fulham"
            app:srcCompat="@drawable/premierleague3" />

        <ImageView
            android:id="@+id/ncaab"
            android:layout_width="51dp"
            android:layout_height="70dp"
            android:layout_below="@+id/vstext3"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/lsu"
            app:srcCompat="@drawable/ncaab" />

        <ImageView
            android:id="@+id/lsu"
            android:layout_width="120dp"
            android:layout_height="134dp"
            android:layout_below="@+id/fulham"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/lsu" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>